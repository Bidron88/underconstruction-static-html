@import url('//fonts.googleapis.com/css?family=Open+Sans:400,600,700,800')

html
  font-family sans-serif
  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%
  box-sizing border-box

*, *:before, *:after
  box-sizing inherit

body
  margin 0
  background-color backgroundBase
  font-family fontFamilyBase
  font-size 16px

hr
  border none
  border-bottom borderBase
  margin spacingBase 0

p
  font-size 16px
  margin 0 0 .9375rem /* 15/16 */

h1, h2, h3, h4, h5, h6
  margin 0 0 .9375rem /* 15/16 */

h1
  font-size 32px

h2
  font-size 30px

h3
  font-size 28px

h4
  font-size 24px

h5
  font-size 20px

h6
  font-size 18px

code,
pre
  font-family monospace, serif
  font-size 1em

pre
  white-space pre
  white-space pre-wrap
  word-wrap break-word

small
  font-size 80%

button,
input,
select,
textarea
  font-family inherit
  font-size 100%
  margin 0

textarea
  vertical-align top

table
  border-collapse collapse
  border-spacing 0

html,
body,
.main-container,
.hero
  width 100%
  height 100%
  +above(tablet-md)
    overflow hidden

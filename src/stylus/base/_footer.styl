.footer
  width 100%
  padding 35px
  +above(tablet-md)
    position fixed
    right 0
    bottom 0
    left 0
  &__left,
  &__right
    font-size 14px
    letter-spacing -0.3px
  &__left
    float left
    color #898999
  &__right
    text-align right
    float right
  &__right,
  &__right a
    color #898999
    opacity 0.75
    +above(tablet-md)
      color #fff
